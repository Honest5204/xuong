<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.FraThongKe.thongechitietthang">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập kho" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:background="@drawable/boder">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Sản phẩm"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Số lượng"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Giá nhập"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcviewNhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất kho" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:background="@drawable/boder">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Sản phẩm"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Số lượng"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Giá xuất"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcviewXuat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>